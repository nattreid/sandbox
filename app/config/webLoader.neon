webloader:
    jsDefaults:
        async: true

    css:
        front:
            files:
                - %wwwDir%/css/front.min.css
                - {files: ["*.css", "*.less"], from: %appDir%/modules/Front}
            fileFilters:
                - @wlCssFilter
                - @lessFilter
                - @cssMin
        crm:
            files:
                - {files: ["*.css", "*.less"], from: %appDir%/modules/CrmExt}
            fileFilters:
                - @wlCssFilter
                - @lessFilter
                - @cssMin
    js:
        front:
            files:
                - %wwwDir%/js/front.min.js
                - {files: ["*.js"], from: %appDir%/modules/Front}
            fileFilters:
                - @jsMin

        frontCs:
            files:
                - %wwwDir%/js/i18n/frontCs.min.js
            fileFilters:
                - @jsMin

        crm:
            files:
                - {files: ["*.js"], from: %appDir%/modules/CrmExt}
            fileFilters:
                - @jsMin